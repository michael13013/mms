<div class="navbar-wagon">
  <!-- Logo -->
  <%= link_to root_path, class: "navbar-wagon-brand" do %>
    <%= image_tag "logo-adopte-un-style.jpg" %>
  <% end %>

  <!-- Right Navigation -->
  <div class="navbar-wagon-right hidden-xs hidden-sm">

    <%= form_tag products_path, class: "navbar-wagon-search",  method: "get" do %>
      <%= text_field_tag :query, params[:query] ,placeholder: "Exemple : 'costume'", :class => "search-box"%>
      <%= submit_tag "Rechercher", name: nil, :class => "btn btn-search btn-default"%>
    <% end%>

    <!-- Different navigation if login or not -->
    <% if user_signed_in? %>

      <!-- Profile picture and dropdown -->
      <div class="navbar-wagon-item">
      <%= link_to destroy_user_session_path, class: "btn btn-danger btn-lg navbar-wagon-button", method: :delete do %>
                <i class="fa fa-sign-out"></i>  <%= t ".sign_out", default: "DÃ©connexion" %>
              <% end %>
      </div>

    <% else %>

      <!-- Login text link -->
      <%# link_to t(".sign_in", default: "Connexion"), new_user_session_path, class: "navbar-wagon-item navbar-wagon-button btn" %>



    <!-- Button (call-to-action) -->
    <%= link_to t(".top_call_to_action", default: "Inscription"), new_user_registration_path, class: "navbar-wagon-item navbar-wagon-button btn" %>
    <% end %>
  </div>

  <!-- Dropdown list appearing on mobile only -->
  <div class="navbar-wagon-item hidden-md hidden-lg">
    <div class="dropdown">
      <i class="fa fa-bars dropdown-toggle" data-toggle="dropdown"></i>
      <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
        <li><a href="#">Some mobile link</a></li>
        <li><a href="#">Other one</a></li>
        <li><a href="#">Other one</a></li>
      </ul>
    </div>
  </div>
</div>

